# Environment configuration for Chatty Backend
# Copy this file to .env and update values as needed

# Application settings
APP_NAME=Chatty Backend
APP_VERSION=0.1.0
APP_ENV=development
DEBUG=true

# Server settings
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database settings (for local development with Docker)
DATABASE_URL=postgresql://chatty:chatty_password@localhost:5432/chatty

# Redis settings (for local development with Docker)
REDIS_URL=redis://:redis_password@localhost:6379/0

# Security settings
SECRET_KEY=dev-secret-key-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring settings
ENABLE_METRICS=true
METRICS_PORT=9090

# Socket.IO settings
SOCKETIO_CORS_ORIGINS=*
